<%- include('./partials/head.ejs') %>
<%- include('./partials/header.ejs') %>
<main>




  <section class="item">
    <!-- <h2>boeken </h2> -->
 
    <% if (books && books.length) { %>
      <%books.forEach(result => { %>
   
        <article class="boek">
          <img src="<%= result.coverimages %>" alt="boek">
          <h4> <%= result.titles[0] %></h4>
          <h5> <%= result.authors %></h5>
          <p> <%= result.summaries[0] %></p>
        </article>
      <% }) %>
    <% } %>
    
  </section>







  <section class="item">
    <!-- <h2>activiteiten</h2> -->
    <% if (activities && activities.length) { %>
  
      <% activities.forEach(result => { %>
    
      <article class="activiteit">
        <img src="<%= result.coverimages %>" alt="activiteit" />
        <h4><%= result.titles[0] %></h4>
        <p><%= result.summaries[0] %></p>
      </article>
    
      <% }) %>
    <% } %>

  </section>





  <section class="item">
    <!-- <h2>cursussen</h2> -->
  
    <% if (courses && courses.length) { %>
      <% courses.forEach(result => { %>
    
        <article class="cursussen">
          <img src="<%= result.coverimages %>" alt="cursussen" />
          <h4><%= result.titles[0] %></h4>
          <p><%= result.summaries[0] %></p>
        </article>
    
      <% }) %>
    <% } %>

  </section>
  </main>

<%- include('./partials/foot.ejs') %>
